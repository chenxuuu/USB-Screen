<Window x:Class="USB_Screen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:USB_Screen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
        <Button Content="111" Click="Button_Click"/>
        <ProgressBar x:Name="progressBar" Value="{Binding Progress}" Height="20" Width="200" Margin="10"/>
    </WrapPanel>
</Window>
